<%= form_for(order) do |f| %>
<% if order.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(order.errors.count, "error") %>
        prohibited this order from being saved:</h2>

    <ul>
        <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= f.label :customer_id %>
    <%= f.collection_select :customer_id, Customer.all, :id, :name, {:prompt => 'Select customer'} %>

    <%= link_to 'Show orders' %>
</div>

<div class="field">
    <%= f.label :item_id %>
    <%= f.collection_select :item_id, Item.all, :id, :name,{:prompt => 'Select item'} %>
</div>

<div class="actions">
    <%= f.submit %>
</div>
<% end %>
<script>
    var c_id = '';
    $('select').on('change', function () {
        c_id = $("#order_customer_id").val();
    });
    $('a').on('click', function () {
        window.location.href = '/customer_orders/' + c_id;
    });
</script>
